{% extends "base.twig" %}

{% block content %}
	<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
	  <div class="carousel-inner">
	    <div class="carousel-item active">
	      <img class="d-block w-100" src="{{ asset('img/php.jpg') }}" alt="First slide">
	    </div>
	  </div>
	</div>
	<a href="/jobs/create" class="btn btn-success">Nuevo Job</a>
	<h1>Lista de Jobs</h1>
	<table class="table">
		<thead>
			<th>ID</th>
			<th>Title</th>
			<th>Description</th>
			<th>Editar</th>
			<th>Eliminar</th>
		</thead>
		<tbody>
			{% for job in jobs %}
				<tr>
					<td>{{ job.id }}</td>
					<td>{{ job.title }}</td>
					<td>{{ job.description }}</td>
					<td><a href="/jobs/{{ job.id }}/edit" class="btn btn-primary">Editar</a></td>
					<td><a href="/jobs/{{ job.id }}/delete" class="btn btn-danger">Eliminar</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}