{% extends "base.twig" %}

{% block custom_styles %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
{% endblock %}

{% block content %}
	<a href="/jobs/create" class="btn btn-success">Nuevo Job</a>
	<h1>Lista de Jobs</h1>
	<table class="table">
		<thead>
			<th>ID</th>
			<th>Title</th>
			<th>Description</th>
			<th>Editar</th>
			<th>Eliminar</th>
		</thead>
		<tbody>
			{% for job in jobs %}
				<tr>
					<td>{{ job.id }}</td>
					<td>{{ job.title }}</td>
					<td>{{ job.description }}</td>
					<td><a href="/jobs/{{ job.id }}/edit" class="btn btn-primary">Editar</a></td>
					<td><a href="/jobs/{{ job.id }}/delete" class="btn btn-danger">Eliminar</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

{% block custom_scripts %}
<script src="{{ asset('js/main.js') }}"></script>
{% endblock %}