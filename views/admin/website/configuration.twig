{% extends "base_admin.twig" %}

{% block content %}
	<h1>Website Configuration</h1>
	{% include 'partials/errors.twig' %}
	<form action="" method="POST" enctype="multipart/form-data">
	  <input type="hidden" name="background_image_save" value="{{ website.background_image }}">
	  <div class="form-group">
	 	<label for="id_site_name">Site name</label>
		<input type="text" value="{{ website.site_name }}" required name="site_name" class="form-control" id="id_site_name" placeholder="Enter site name">
	  </div>
	  <div class="form-group">
	    <label for="id_title">Title</label>
	    <input type="text" value="{{ website.title }}" required name="title" class="form-control" id="id_title" placeholder="Enter title">
	  </div>
	  <div class="form-group">
	    <label for="id_description">Description</label>
	    <input type="text" value="{{ website.description }}" name="description" class="form-control" id="id_description" placeholder="Description">
	  </div>
	  <div class="form-group">
	    <label for="id_background_image">Imágen de fondo</label>
	    <input type="file" name="background_image" id="id_background_image" class="form-control" id="customFile">
	    {% if website.background_image %}
	    	<small><a href="{{ asset(website.background_image) }}" target="_blank">Ver imágen actual</a></small>
	   	{% endif %}
	  </div>
	  <button type="submit" class="btn btn-success">Submit</button>
	</form>
{% endblock %}