{% extends "base_admin.twig" %}

{% block content %}
	<h1>Edit Product</h1>
	{% include 'partials/errors.twig' %}
	<form action="" method="POST" enctype="multipart/form-data">
	  <input type="hidden" name="image_save" value="{{ product.image }}">
	  <div class="form-group">
	    <label for="id_title">Title</label>
	    <input type="text" value="{{ product.title }}" required name="title" class="form-control" id="id_title" placeholder="Enter title">
	  </div>
	  <div class="form-group">
	    <label for="id_description">Description</label>
	    <input type="text" value="{{ product.description }}" name="description" class="form-control" id="id_description" placeholder="Description">
	  </div>
	  <div class="form-group">
	    <label for="id_image">Imágen</label>
	    <input type="file" name="image" id="id_image" class="form-control" id="customFile">
	   	{% if website.background_image %}
	   	  <small><a href="{{ asset(product.image) }}" target="_blank">Ver imágen actual</a></small>
	   	{% endif %}
	  </div>
	  <button type="submit" class="btn btn-success">Submit</button>
	</form>
{% endblock %}