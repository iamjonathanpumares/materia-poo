{% extends "base_admin.twig" %}

{% block content %}
	<a href="/admin/products/create" class="btn btn-success">Nuevo producto</a>
	<h1>Lista de productos</h1>
	<table class="table">
		<thead>
			<th>Title</th>
			<th>Description</th>
			<th>Editar</th>
			<th>Eliminar</th>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.title }}</td>
					<td>
						{{ product.description }}
					</td>
					<td><a href="/admin/products/{{ product.id }}/edit" class="btn btn-primary">Editar</a></td>
					<td><a href="/admin/products/{{ product.id }}/delete" class="btn btn-danger">Eliminar</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}